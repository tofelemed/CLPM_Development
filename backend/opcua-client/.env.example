# CLPM OPC UA Client Environment Configuration

# Node.js Environment
NODE_ENV=development
LOG_LEVEL=info

# Application Identity
APPLICATION_NAME=CLPM OPC UA Client
APPLICATION_URI=urn:clpm:opcua:client
PRODUCT_URI=urn:clpm:opcua:client

# API Server Configuration
PORT=3002
HOST=0.0.0.0
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ENABLE_COMPRESSION=true

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Authentication (Optional - Disable for development)
AUTH_ENABLED=false
# API_KEY=your-secret-api-key-here
# JWT_SECRET=your-jwt-secret-here

# Certificate Management
CERTIFICATE_DIR=./certs
CERTIFICATE_LIFETIME_DAYS=365
AUTO_TRUST_UNKNOWN_CERTS=true

# OPC UA Client Settings
DEFAULT_SAMPLING_INTERVAL=1000
MAX_SESSION_SUBSCRIPTIONS=1000
CONNECTION_TIMEOUT_MS=30000
RECONNECT_DELAY_MS=5000
MAX_RECONNECT_DELAY_MS=60000
MAX_RECONNECT_ATTEMPTS=10
HEALTH_CHECK_INTERVAL_MS=60000

# Data Handling
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000
MAX_QUEUE_SIZE=10000

# Metrics Server Configuration
METRICS_PORT=9090
METRICS_HOST=0.0.0.0
PROMETHEUS_ENABLED=true
METRICS_UPDATE_INTERVAL_MS=10000

# Development Settings
PRETTY_LOGS=true